{% extends '::base.html.twig' %}

{% block stylesheets %}
  {{parent()}}
  <link rel="stylesheet" href="{{ asset('bundles/app/css/contact.css') }}" type="text/css">
{% endblock %}

{% block title %}
  {{parent()}} -- Notre Blog
{% endblock %}

{% block body %}
  {% if confirmation is defined and 1 == confirmation %}
    <div class="alert alert-success">
      Message bien envoyé !
    </div>
  {% endif %}
  <form class="col-sm-offset-3 col-sm-6" action="contact" method="post">
    <div class="form-group">
      <label for="identite" class="redTxt">identité :</label>
      <input type="text" class="form-control col-sm-6" id="identite" placeholder="">
    </div>
    <div class="form-group">
      <label for="message" class="redTxt">message :</label>
      <div class="">
        <textarea name="name" rows="8" cols="80" id="message"></textarea>
      </div>
    </div>
    <input type="submit" name="submit" value="Envoyer">
  </form>
{% endblock %}
